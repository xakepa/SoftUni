<main>
  <h1>{{name}}</h1>
  <img class="cube" src="{{imageUrl}}">
  <div class="details">
    <p><span>Description:</span> {{description}}</p>
    <p><span>Difficulty level:</span> {{difficultyLevel}}</p>
    <div class="btns">
      <a class="btn" href="/">Back</a>
      {{#if owner}}
      <a class="btn" href="/attach/accessory/{{_id}} ">Attach Accessory</a>
      <a class="btn" href="/edit/{{_id}}">Edit</a>
      <a class="btn btn-del" href="/delete/{{_id}}">Delete</a>
      {{/if}}
    </div>
  </div>
</main>

<h2>Accessories</h2>
<div class="accessories">
  {{#each accessories}}
  <div class="accessory">
    <img src="{{this.imageUrl}}">
    <h3>{{this.name}}</h3>
    <p>{{this.description}}</p>
  </div>
  {{/each}}
  {{#if isEmpty}}
  <h3 class="italic">This cube has no accessories yet...</h3>
  {{/if}}
</div>